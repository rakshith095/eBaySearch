<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingLeft="10dp"
    android:id="@+id/shippingLayout">

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="1">

        <TableRow
            android:id="@+id/rowShippingType"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:padding="5dip" >

            <TextView
                android:id="@+id/tvShippingTypeHeader"
                android:layout_width="0dip"
                android:text="Shipping Type"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:textStyle="bold"
                android:singleLine="false" />
            <TextView
                android:id="@+id/tvShippingType"
                android:layout_width="0dip"
                android:text="Column 1"
                android:layout_weight="1"
                android:textAllCaps="false" />
        </TableRow>

        <TableRow
            android:id="@+id/rowHandlingTime"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:padding="5dip" >

            <TextView
                android:id="@+id/tvHandlingTimeHeader"
                android:layout_width="0dip"
                android:text="Handling Time"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:singleLine="false" />
            <TextView
                android:id="@+id/tvHandlingTime"
                android:layout_width="0dip"
                android:text="Column 1"
                android:layout_weight="1"
                android:textAllCaps="false" />
        </TableRow>

        <TableRow
            android:id="@+id/rowShippingLocations"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:padding="5dip" >

            <TextView
                android:id="@+id/tvShippingLocationsHeader"
                android:layout_width="0dip"
                android:text="Shipping Locations"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:singleLine="false" />
            <TextView
                android:id="@+id/tvShippingLocations"
                android:layout_width="0dip"
                android:text="Column 1"
                android:layout_weight="1"
                android:textAllCaps="false" />
        </TableRow>

        <TableRow
            android:id="@+id/rowExpeditedShipping"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:padding="5dip" >

            <TextView
                android:id="@+id/tvExpeditedShippingHeader"
                android:layout_width="175dp"
                android:text="Expedited Shipping"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/ivExpeditedShipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left" />
        </TableRow>

        <TableRow
            android:id="@+id/rowOneDayShipping"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:padding="5dip" >

            <TextView
                android:id="@+id/tvOneDayShippingHeader"
                android:layout_width="175dp"
                android:text="One Day Shipping"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/ivOneDayShipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left" />
        </TableRow>

        <TableRow
            android:id="@+id/rowReturnsAccepted"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:padding="5dip" >

            <TextView
                android:id="@+id/tvReturnsAcceptedHeader"
                android:layout_width="175dp"
                android:text="Returns Accepted"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/ivReturnsAccepted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left" />
        </TableRow>

    </TableLayout>
</LinearLayout>
